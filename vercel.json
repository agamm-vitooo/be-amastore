{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "router/**/*",
          "controllers/**/*",
          "models/**/*",
          "helpers/**/*",
          "middleware/**/*",
          "config/**/*"
        ]
      }
    }
  ],
  "functions": {
    "api/index.js": {
      "memory": 512,
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.js"
    }
  ]
}
